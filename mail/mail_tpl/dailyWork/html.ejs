<meta charset="UTF-8">
<style type="text/css">
    ul {
        margin: 0;
        padding: 0;
    }

    li {
        list-style-type: none;
    }
    .greet{
        text-indent: 30px;
        padding: 5px 0;
    }
    .title{
        font-weight: bold;
        padding: 10px;
        font-size: 20px;
        letter-spacing: 1px;
    }
    table{
        border-width: 1px;
        border-color: #e0e0e0;
        border-collapse: collapse;
    }
    table th{
        border-width: 1px;
        padding: 8px;
        border-style: solid;
        border-color: #e0e0e0;
        background-color: rgb(219,238,243);
        text-align: center;
    }
    table td{
        border-width: 1px;
        padding: 8px;
        border-style: solid;
        border-color: #e0e0e0;
        background-color: #ffffff;
    }
    .first-tr{
        font-weight: bold;
    }
    .first-tr td:nth-child(1){
        width: 350px;
    }
    .first-tr td:nth-child(2){
        width: 50px;
    }
    .first-tr td:nth-child(3){
        width: 80px;
    }
    .sigature-area{
        margin-top: 30px;
    }
</style>
<div class="begin">
    <div class="call"><%= beginObj.call%></div>
    <div class="greet"><%= beginObj.greet%></div>
</div>
<table>
    <tr>
        <th colspan="4" class="title"><%= beginObj.title%></th>
    </tr>
    <tr class="first-tr">
        <td>工作事项描述</td>
        <td>负责人</td>
        <td>完成进度</td>
        <td>备注</td>
    </tr>
    <% 
        var replaceAll = function(str){
            str = str.split('\n').join('<br/>');
            return str;
        }
        for (var i=0;i<works.length;i++) {
            var item = works[i];
    %>
    <tr>
        <td><%- replaceAll(item.workDesc)%></td>
        <td><%= item.author.name%></td>
        <td><%= item.cProgress%></td>
        <td><%- replaceAll(item.remark)%></td>
    </tr>
    <% } %>
</table>
<div class="sigature-area">
    <ul>
        <li><%- sigature.name%></li>
        <li><%- sigature.company%></li>
        <li><%- sigature.addr%></li>
        <li><%- sigature.phone%></li>
        <li><%- sigature.qq%></li>
        <li><%- sigature.email%></li>
    </ul>
    <img src="cid:attach_img@mailSuffix"/> 
</div>
